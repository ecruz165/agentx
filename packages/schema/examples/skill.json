{
  "name": "commit-analyzer",
  "type": "skill",
  "version": "2.1.0",
  "description": "Analyzes git commit history for team metrics",
  "tags": ["git", "analytics", "devx"],
  "author": "edwin",
  "runtime": "node",
  "vendor": null,
  "topic": "scm",
  "cli_dependencies": [{ "name": "git", "min_version": "2.30" }],
  "inputs": [
    { "name": "repoPath", "type": "string", "required": true, "description": "Path to the git repository" },
    { "name": "days", "type": "number", "default": 30, "description": "Number of days to analyze" }
  ],
  "outputs": { "format": "json", "schema": "./output-schema.json" },
  "registry": {
    "tokens": [],
    "config": { "days_default": 30, "include_merge_commits": true },
    "state": ["last-run.json"],
    "output": { "schema": "./output-schema.json" },
    "templates": null
  }
}
